#desafio - fazer um programa que:
#leia um arquivo de texto 
#Redimensione o perfil no tamanho que eu quero 
#rotacione o perfil no angulo que quero 
#rotacione o perfil no plano que quero 
#calcular o Centro de masse e/ou centro geométrico para me auxiliar na modelagem. 
#salvar todos os dados em um excel 
#executar a macro do Catia. 

import numpy as np 
import matplotlib.pyplot as plt




def rotatae_xy(dir, ang):

    points_a = []
    points_b = []
    points_c = []

    arq = np.loadtxt(dir)

    # dir [i][0] = coordenada x
    # dir [i][1] = coordenada y  
    print(np.sin((ang*np.pi)/180))
    for i in range(len(arq)):
        points_a.append(dir[i][0]*np.cos((ang*np.pi)/180) - dir[i][1]*np.sin((ang*np.pi)/180))
        points_b.append(dir[i][0]*np.sin((ang*np.pi)/180) + dir[i][1]*np.sin((ang*np.pi)/180))
        points_c.append(0)

    

    return(points_a, points_b, points_c)


rotatae_xy(r"C:\Users\U57534\OneDrive - Bühler\Desktop\FINS\GOE-775.txt", 30)
